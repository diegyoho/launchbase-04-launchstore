{% extends 'layout.njk' %}

{% block content %}

<section class="password container form">
    <form method="POST" action="/users/forgot-password">
        <div class="header">
            <h3>Esqueceu sua senha?</h3>
        </div>

        <div class="fields">
            <div class="field">
                <label for="email">E-mail</label>
                <input
                    type="email"
                    name="email"
                    placeholder="Digite o email cadastrado"
                    value="{{ user.email }}"
                    onblur="Validate.apply(this, 'isEmail')"
                >
            </div>
        </div>

        <button
            class="button"
            type="submit"
            onclick="Validate.hasErrors(event)"
            onblur="Validate.clearErrors(this)"
        >
            Recuperar Senha
        </button>
    </form>
</section>

{% endblock %}