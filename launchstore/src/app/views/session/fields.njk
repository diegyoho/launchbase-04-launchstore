<div class="field">
    <label for="email">E-mail</label>
    <input
        type="email"
        name="email"
        placeholder="email@email.com"
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')"
    >
</div>

<div class="field">
    <label for="password">Senha</label>
    <input
        type="password"
        name="password"
        onkeyup="Validate.confirmPassword(this)"
        onblur="Validate.confirmPassword(this)"
    >
</div>