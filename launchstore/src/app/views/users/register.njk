{% extends 'layout.njk' %}

{% block content %}

<section class="user-register container form">
    <form method="POST" action="/users/register">
        <div class="header">
            <h3>Registre-se</h3>
        </div>
        <div class="fields">
            {% include 'users/register-fields.njk' %}
        </div>

        <button
            class="button"
            type="submit"
            onclick="Validate.hasErrors(event)"
            onblur="Validate.clearErrors(this)"
        >Salvar
        </button>
    </form>
</section>

{% endblock %}